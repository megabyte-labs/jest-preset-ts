{
  "private": false,
  "name": "@washingtondc/jest",
  "version": "1.0.0",
  "description": "A Jest preset that lints .spec.ts files, runs the tests, and includes fancy reporting",
  "license": "MIT",
  "author": "Brian Zalewski <brian@megabyte.space> (https://megabyte.space)",
  "homepage": "https://megabyte.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ProfessorManhattan/jest-preset.git"
  },
  "type": "module",
  "bugs": {
    "email": "help@megabyte.space",
    "url": "https://gitlab.com/megabyte-labs/npm/configs/eslint/-/issues"
  },
  "main": "jest.config.js",
  "files": [
    "jest.config.js",
    "jest.config.js.map",
    "jest.d.ts",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && cp -rT dist/ .",
    "test": "echo 'No tests to perform'"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@jest-runner/electron": "^3.0.1",
    "@storybook/addon-storyshots": "^6.3.12",
    "@types/jest-json-schema": "^2.1.3",
    "expect-puppeteer": "^6.0.0",
    "is-ci": "^3.0.1",
    "jest": "^27.2.5",
    "jest-chain": "^1.1.5",
    "jest-dom": "^4.0.0",
    "jest-html-reporters": "^2.1.6",
    "jest-image-snapshot": "^4.5.1",
    "jest-json-schema": "^5.0.0",
    "jest-junit": "^13.0.0",
    "jest-preset-angular": "^10.1.0",
    "jest-puppeteer": "^6.0.0",
    "jest-runner-eslint": "^1.0.0",
    "jest-runner-groups": "^2.1.0",
    "jest-runner-prettier": "^0.3.7",
    "jest-runner-stylelint": "^2.3.7",
    "jest-runner-tsc": "^1.6.0",
    "jest-watch-master": "^1.0.0",
    "jest-watch-select-projects": "^2.0.0",
    "jest-watch-typeahead": "^1.0.0",
    "ts-jest": "^27.0.3"
  },
  "peerDependencies": {
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@megabytelabs/eslint-config": "^1.0.6",
    "@megabytelabs/prettier-config": "^14.14.14",
    "@types/is-ci": "^3.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "typescript": "^4.4.4"
  },
  "eslintConfig": {
    "extends": "@megabytelabs/eslint-config"
  },
  "keywords": [
    "jest",
    "reports",
    "tests",
    "unit",
    "linter",
    "megabytelabs",
    "professormanhattan",
    "typescript"
  ],
  "engines": {
    "node": ">=10"
  },
  "blueprint": {
    "customPackageName": "jest-preset-ts",
    "description": "A Jest preset geared towards TypeScript, Angular, and Node.js projects",
    "overview": "This is a [Jest](https://jestjs.io/) preset that is used in all of the [Megabyte Labs projects](https://gitlab.com/megabyte-labs) that use Jest. Jest is a JavaScript/TypeScript testing framework maintained by Facebook. This particular Jest preset is built with support for TypeScript, Node.js, and Angular in mind. It includes several Jest plugins as well as improved HTML reports. Out of the box, it lints `.spec.ts` files, runs the tests, and includes fancy reporting.",
    "name": "Jest Preset TypeScript",
    "group": "npm",
    "subgroup": "config",
    "jsonFiles": {
      "package.json": {
        "files": [
          "jest-preset.js",
          "README.md",
          "LICENSE"
        ],
        "main": "jest-preset.js"
      },
      "tsconfig.json": {
        "outDir": "./"
      }
    },
    "repository": {
      "github": "https://github.com/ProfessorManhattan/jest-preset-ts",
      "gitlab": "https://gitlab.com/megabyte-labs/npm/configs/jest-preset-ts"
    },
    "slug": "jest-preset-ts",
    "title": "TypeScript / Angular / Node.js Jest Preset"
  },
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/megabytelabs"
    },
    {
      "type": "patreon",
      "url": "https://www.patreon.com/ProfessorManhattan"
    }
  ],
  "lint-staged": {
    "**/*": [
      "blocklint --wordlist blacklist,slave,whitelist",
      "check-merge-conflict",
      "check-added-large-files",
      "check-symlinks",
      "destroyed-symlinks"
    ],
    "**/*.(css|html|less|md|mjml|php|scss|sh|xml)": [
      "task fix:prettier --"
    ],
    "**/*.json": [
      "task fix:json --"
    ],
    "**/*.(js|jsx|ts)": [
      "task fix:js --",
      "task lint:js --"
    ],
    "**/*.sh": [
      "task fix:shell --",
      "task lint:shell --"
    ],
    "**/*.toml": [
      "task lint:toml --"
    ],
    "**/*.xml": [
      "task fix:xml --",
      "task lint:xml --"
    ],
    "**/*.yml": [
      "task fix:yaml --",
      "task lint:yaml --"
    ],
    "**/*.(jpg|png)": [
      "task image:compress --"
    ],
    "logo.png": [
      "task image:resize -- 200 200",
      "task image:compress --"
    ]
  },
  "prettier": "@mblabs/prettier-config",
  "standard-version": {
    "scripts": {
      "prerelease": "git add --all"
    }
  }
}
